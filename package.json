{
  "name": "image2lcd",
  "version": "1.0.0",
  "description": "Image to LCD converter desktop application",
  "main": "dist/main/main.js",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.main.json && vite build",
    "build:electron": "npm run build && electron-builder",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "cli": "tsx src/cli.ts",
    "dev": "vite",
    "start": "node electron-start.js",
    "start:prod": "npm run build && electron ."
  },
  "bin": {
    "image2lcd": "./dist/cli.js"
  },
  "keywords": [
    "image",
    "lcd",
    "converter",
    "embedded"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "fast-check": "^4.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sharp": "^0.34.5"
  }
}
